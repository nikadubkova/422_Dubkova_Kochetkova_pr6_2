<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пользователи"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="400" Height="350"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid Margin="0,0,0,70">
        <Border Background="#AFEEEE" CornerRadius="15" Padding="15">
            <StackPanel>
                <!-- Заголовок с кнопкой закрытия -->
                <DockPanel>
                    <TextBlock Text="👥 Список пользователей" 
                               Foreground="#BA55D3" FontSize="16" FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    <Button Content="✖" Width="25" Height="25" 
                            Background="Transparent" Foreground="#FFC0CB"
                            FontSize="16" FontWeight="Bold"
                            Click="CloseButton_Click"
                            HorizontalAlignment="Right"/>
                </DockPanel>

                <!-- Таблица пользователей -->
                <DataGrid x:Name="DataGridUsers" 
                          Background="#E6E6FA" Foreground="Black"
                          GridLinesVisibility="None"
                          AutoGenerateColumns="True"
                          Height="150" Margin="0,10,0,10"/>

                <!-- Кнопки управления -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Добавить" Click="AddButton_Click" 
                            Background="#DDA0DD" Foreground="Black"
                            Width="100" Height="30" FontWeight="Bold"/>
                    <Button Content="Редактировать" Click="EditButton_Click" 
                            Background="#DDA0DD" Foreground="Black"
                            Width="100" Height="30" FontWeight="Bold"/>
                    <Button Content="Удалить" Click="DeleteButton_Click" 
                            Background="#CD5C5C" Foreground="Black"
                            Width="100" Height="30" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
